@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>My CV</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/cv.css")">
</head>
<body>
    <div class="container">
        <h1 class="name" data-bind="text: name"></h1>
        <div class="row">
            <h1 class="heading">Basic Info</h1>
            <table data-template="tr-template" data-bind="source: basicInfoItems">
            </table>
            <script id="tr-template" type="text/x-kendo-template">
                <tr>
                    <td data-bind="text: key"></td>
                    <td><span class="colon">:</span><span data-bind="text: value"></span></td>
                </tr>
            </script>
        </div>
        <div class="row">
            <h1 class="heading">Experience</h1>
            <div data-template="experience-item-template" data-bind="source: experienceItems">
                <script id="experience-item-template" type="text/x-kendo-template">
                <div class="experience-item">
                    <p class="company" data-bind="text: companyName">                    
                    </p>
                    <p>
                        <span data-bind="text: location"></span><span class="timeframe" data-bind="text: timeframe"></span>
                    </p>
                    <p data-bind="text: jobTitle"></p>
                    <p data-bind="text: description">
                    </p>
                </div>
                </script>
            </div>
        </div>
        <div class="row">
            <h2 class="heading">Education</h2>
            <table data-template="tr-template" data-bind="source: educationItems">
            </table>
        </div>

        <div class="row">
            <h2 class="heading">Skills, Qualifications and Design Patterns</h2>
            <div data-template="p-template" data-bind="source: skillsParagraphs">
                <script id="p-template" type="text/x-kendo-template">
                <p data-bind="text: value">
                </p>
                </script>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/kendo.web.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/App/cv.js")"></script>
</body>
</html>
